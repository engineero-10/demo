<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="544.0" prefWidth="1000.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.controller.ProjectController">

    <children>

        <TableView fx:id="projectTable" layoutX="8.0" layoutY="113.0" prefHeight="431.0" prefWidth="983.0">

            <columns>
                <TableColumn fx:id="projectIdCol" prefWidth="80" text="ID" />
                <TableColumn fx:id="projectNameCol" prefWidth="230" text="Project Name" />
                <TableColumn fx:id="descriptionCol" prefWidth="280" text="Description" />
                <TableColumn fx:id="timeEstimationCol" prefWidth="180" text="Time Estimation" />
                <TableColumn fx:id="functionsCol" prefWidth="180" text="Functions" />
            </columns>

        </TableView>

        <Button layoutX="381.0" layoutY="64.0" onAction="#handleAddProject" prefHeight="26.0" prefWidth="223.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 15; -fx-cursor: hand;" text="+ Add New Project">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <HBox layoutX="22.0" layoutY="82.0" spacing="10" />
      <Label layoutX="469.0" layoutY="23.0" style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill: #2c3e50;" text="Projects" />
         <TextField fx:id="searchField" layoutX="29.0" layoutY="69.0" prefHeight="26.0" prefWidth="194.0" promptText="Enter Project ID" style="-fx-background-radius: 15;" />
         <Button layoutX="233.0" layoutY="69.0" onAction="#handleSearch" style="-fx-background-color: #27ae60; -fx-background-radius: 8; -fx-text-fill: white; -fx-cursor: hand;" text="Search">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>

    </children>
</Pane>
