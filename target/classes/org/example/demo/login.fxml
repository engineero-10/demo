<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="531.0" prefWidth="387.0" style="-fx-background-color: #eef2f3; -fx-background-radius: 16;-fx-border-radius: 16;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.controller.LoginController">

    <VBox alignment="CENTER"
          spacing="15"
          style="
          -fx-background-color: white;
          -fx-background-radius: 16;
          -fx-border-radius: 16;
          -fx-border-width: 1;
          -fx-padding: 25;
      ">

        <Label text="Welcome Back" textFill="#333">
            <font>
                <Font size="24" />
            </font>
        </Label>

        <Label text="Login to your account" textFill="#777">
            <font>
                <Font size="14" />
            </font>
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TextField fx:id="usernameField" prefHeight="40" promptText="Username" />

        <PasswordField fx:id="passwordField" prefHeight="40" promptText="Password" />

        <Label fx:id="errorLabel" textFill="RED" visible="false" />

        <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="40" prefWidth="260" style="                     -fx-background-color: #2196f3;                     -fx-text-fill: white;                     -fx-font-weight: bold;                     -fx-background-radius: 6;                     -fx-cursor: hand;                 " text="LOGIN" />

        <Hyperlink onAction="#openRegisterPage" text="Don't have an account? Register" textFill="#2980b9" />

    </VBox>

</StackPane>
