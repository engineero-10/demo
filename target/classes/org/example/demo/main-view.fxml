<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/25" fx:controller="org.example.demo.controller.MainController">
    <top>
        <Pane prefHeight="56.0" prefWidth="1200.0"
              style="-fx-background-color: E9E9E; -fx-border-color: transparent transparent  #1b263b transparent;"
              BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="50.0" layoutY="17.0" text="Employee Management" textFill="#1b263b">
                    <font>
                        <Font name="Arial" size="21.0"/>
                    </font>
                </Label>
                <Label fx:id="btnExit" layoutX="1156.0" layoutY="13.0" prefHeight="30.0" prefWidth="30.0"/>
                <ImageView fx:id="close" fitHeight="30.0" fitWidth="30.0" layoutX="1156.0" layoutY="14.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/exit.png"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="14.0" layoutY="11.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@images/images.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
    </top>
    <left>
        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1b263b;" BorderPane.alignment="CENTER">
            <children>
                <VBox layoutY="49.0" prefHeight="368.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#home" prefHeight="35.0"
                                prefWidth="200.0" style="-fx-background-color: transparent;" text="Home"
                                textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#employee" prefHeight="35.0" prefWidth="200.0"
                                style="-fx-background-color: transparent;" text="Employees" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#project"
                                prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: transparent;"
                                text="Projects" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button layoutX="10.0" layoutY="90.0" mnemonicParsing="false" onAction="#about"
                                prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: transparent;"
                                text="About" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button layoutX="10.0" layoutY="50.0" mnemonicParsing="false" onAction="#setting"
                                prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: transparent;"
                                text="Settings" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
                <Label alignment="TOP_CENTER" prefHeight="26.0" prefWidth="200.0"
                       style="-fx-border-color: transparent transparent  white transparent; -fx-padding: 10;"
                       text="Dashboard" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="16.0"/>
                    </font>
                </Label>
            </children>
        </Pane>
    </left>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <StackPane fx:id="contentArea" prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
