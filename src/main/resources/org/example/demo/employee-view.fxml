<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="544.0" maxWidth="1000.0" prefHeight="544.0" prefWidth="1000.0"
      xmlns="http://javafx.com/javafx/25" fx:controller="org.example.demo.controller.EmployeeController">
    <VBox xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" maxHeight="544.0" maxWidth="1000.0" prefHeight="544.0" prefWidth="1000.0"
          spacing="15" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx">

        <padding>
            <Insets bottom="20" left="20" right="20" top="20"/>
        </padding>

        <Label style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill: #2c3e50;" text="Employee"/>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <children>
                <Label text="Search:">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="searchIdField" prefWidth="250.0" promptText="Search by ID..."
                           style="-fx-background-radius: 15;"/>

                <Button mnemonicParsing="false" onAction="#addEmployee"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;"
                        text="+ Add New Employee">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <padding>
                        <Insets bottom="7" left="15" right="15" top="7"/>
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#assignEmployeeToProject"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;"
                        text="ðŸ“‹ Assign to Project">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <padding>
                        <Insets bottom="7" left="15" right="15" top="7"/>
                    </padding>
                </Button>
            </children>
        </HBox>

        <TableView fx:id="table" prefWidth="800" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60" text="ID"/>
                <TableColumn fx:id="colName" prefWidth="150" text="Name"/>
                <TableColumn fx:id="colEmail" prefWidth="180" text="Email"/>
                <TableColumn fx:id="colPosition" prefWidth="120" text="Position"/>
                <TableColumn fx:id="colProId" prefWidth="100" text="Project ID"/>
                <TableColumn fx:id="colProject" prefWidth="130" text="Name Project"/>
                <TableColumn fx:id="colStartDate" prefWidth="110" text="Start Date"/>
                <TableColumn fx:id="colActions" prefWidth="160" text="Actions"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>
</Pane>